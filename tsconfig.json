{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2022",
    "lib": ["ES2023", "DOM"],
    "module": "Node16",
    "baseUrl": "./",
    "paths": {
      "@application/*": ["./src/application/*"],
      "@infra/*": ["./src/infra/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "exclude": ["vitest.config.mts"],
}